<h1>Home</h1>

<%= form_tag("/", :method => "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @results.present? %>
  <% @results.each_pair{|key, val| %>
    <% if @results[key].present? %>
      <hr><h1><%= key %> Results</h1>
      <%= val.to_s.html_safe %>
    <% end %>
  <% } %>
<% end %>
