source 'https://rubygems.org'

gem 'rails', '3.2.8'  # Ruby On Rails, our main rapid development framework.
gem 'sqlite3'  # Lightweight SQL database.
gem 'jquery-rails'  # Connects jQuery JavaScript library to Rails.

group :assets do
  gem 'sass-rails', '~> 3.2.3'  # Sass adapter for the Rails asset pipeline.
  gem 'coffee-rails', '~> 3.2.1'  # CoffeScript adapter for the Rails asset pipeline.
  gem 'uglifier', '~> 1.2.3'  # Ruby wrapper for UglifyJS JavaScript compressor.
end
